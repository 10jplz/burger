<div class="container bg-secondary text-white">
    <div class="row ">
        <div class="col">
            <h1 class="text-center p-3">Burgers!</h1>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h2>Add a Burger</h2>
            <form id="create-form">
                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input class="bg-light" type="text" id="ca" name="name">
                </div>

                <button class="bg-primary text-white" type="submit">Add a Burger</button>

            </form>
        </div>
        <div class="col">
            <h2>All Burgers</h2>

            <ul id="devour">
                {{#each burgers}}
                {{#unless devoured }}
                <li>
                    {{name}} <button class="changeEaten btn-sm bg-primary text-white" data-id="{{id}}"
                        data-newEat="{{devour}}" type="submit">Eat It!</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col">
            <h2>Burgers Devoured</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>